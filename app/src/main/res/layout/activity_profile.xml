<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".activities.settings.ProfileActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:divider="@drawable/empty_tall_divider"
                android:showDividers="middle"
                android:layout_above="@+id/edit_profile_btn">

            <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/shape_circle"/>

            <TextView
                    android:id="@+id/profileNameUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre de Usuario"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
            <TextView
                    android:id="@+id/profileEmailUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total amigos de facebook"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
            <TextView
                    android:id="@+id/profilePhoneUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="total contactos de linkedin"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
            <TextView
                    android:id="@+id/profileCountryUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="total amgios de twitter"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
            <TextView
                    android:id="@+id/profileUserDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
        </LinearLayout>
        <Button
                android:id="@+id/edit_profile_btn"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_alignParentBottom="true"
                android:text="@string/edit_profile"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:textAllCaps="false"
                android:background="@drawable/gradient_editprofile_button"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>