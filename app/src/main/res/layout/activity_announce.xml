<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".activities.home.AnnounceActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:divider="@drawable/empty_tall_divider"
                android:showDividers="middle">

            <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/app_name"/>

            <TextView
                    android:id="@+id/announceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Announce Title"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
            <TextView
                    android:id="@+id/announcePlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Announce Place"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
            <TextView
                    android:id="@+id/announceSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Announce Salary"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
            <TextView
                    android:id="@+id/announceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Announce Description"
                    android:textColor="@color/common_google_signin_btn_text_dark"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>