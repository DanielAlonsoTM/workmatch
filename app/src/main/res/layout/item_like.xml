<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/like_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_action_person_dark"
                android:contentDescription="@string/app_name"/>
        <TextView
                android:id="@+id/like_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@+id/like_image"
                android:layout_toStartOf="@+id/like_match"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:gravity="start|center"
                android:text="@string/app_name"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:textStyle="bold"
                android:textSize="20sp"/>
        <ImageView
                android:id="@+id/like_match"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_action_favorite_border_dark"
                android:contentDescription="@string/app_name"/>
    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="5dp"/>

</LinearLayout>